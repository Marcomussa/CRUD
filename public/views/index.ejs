<%- include('./partials/head.ejs') %> 

<%- include('./partials/nav.ejs') %> 

<body>
   <div class="background" id="contenedorIndex">
    <%- include('./carrousell.ejs') %> 
    <div class="container contIndex">
        <div class="row">
            <h3>Productos Destacados</h3>
            <a href="/products">Ver mas</a>
        </div>
    </div>
    <div class="container">
        <div class="row contProductIndex">
            <% for(let i = 0; i < destacados.length; i++){ %> 
                <div class="background subContProductIndex">
                    <img src="../img/avatars/<%= destacados[i].img %> " alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= destacados[i].name %> </h5>
                        <p class="card-text"><%= destacados[i].description %> </p>
                        <p class="card-text"><%= destacados[i].category %> </p>
                        <p class="card-text">$<%= destacados[i].price %> </p>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <a href="products/<%= destacados[i].id %>" class="btn btn-primary btnDetalleIndex">Detalle</a> 
                        <% if(user.permisos == '1'){ %>
                            <a href="products/update/<%= destacados[i].id %>" class=" btn btn-success btn-editProduct">Editar</a> 
                            <form action="/products/delete/<%= destacados[i].id %>" method="POST">
                                <input type="submit" value="Borrar" class="btn btn-danger">
                            </form>
                        <% } else { %>
                            <a href="/cart" class="btn btn-success btnComprarIndex">Comprar</a> 
                        <% } %> 
                    </div>
                </div>
            <% } %> 
        </div>
    </div>

    <div class="container contIndex">
        <div class="row">
            <h3>Ofertas</h3>
            <a href="/products/offers">Ver mas</a>
        </div>
    </div>
    <div class="container">
        <div class="row contProductIndex">
            <% for(let i = 0; i < ofertas.length; i++){ %> 
                <div class="background subContProductIndex">
                    <img src="../img/avatars/<%= ofertas[i].img %> " alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= ofertas[i].name %> </h5>
                        <p class="card-text"><%= ofertas[i].description %> </p>
                        <p class="card-text text-decoration-line-through">$ <%= ofertas[i].price %> </p>
                        <p class="card-text">% <%= ofertas[i].discount %> </p>
                        <p class="card-text">$ <%= ofertas[i].priceWithDiscount %> </p>
                    </div>
                    <div class="card-body d-flex justify-content-between">
                        <a href="products/<%= ofertas[i].id %>" class="btn btn-primary btnDetalleIndex">Detalle</a> 
                        <% if(user.permisos == '1'){ %>
                            <a href="products/update/<%= ofertas[i].id %>" class=" btn btn-success btn-editProduct">Editar</a> 
                            <form action="/products/delete/<%= ofertas[i].id %>" method="POST">
                                <input type="submit" value="Borrar" class="btn btn-danger">
                            </form>
                        <% } else { %>
                            <a href="products/buy/<%= ofertas[i].id %>" class="btn btn-success btnComprarIndex">Comprar</a> 
                        <% } %> 
                    </div>
                </div>
            <% } %> 
        </div>
    </div>
  
    
    <%- include('./partials/footer.ejs') %> 
   </div>
</body>

