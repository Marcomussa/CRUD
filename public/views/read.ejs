<%- include('./partials/head.ejs') %> 

<%- include('./partials/nav.ejs') %> 

<body>
    <div class="container">
        
    </div>
    
    <div class="container d-flex background">
        <div class="col-md-3 categorySidebar">
            <ul class="mt-3">
                <% for(let i = 0; i < categorys.length; i++){ %> 

                <li>
                   <a href="/products/category/<%= categorys[i].id %>" class="categorySidebarLink"> <%= categorys[i].name %> </a>
                </li>

                <% } %> 
            </ul>
        </div>
        <div class="contProduct col-md-9">   
            <div class="row">
                <h3>
                    Productos Destacados
                </h3>
            </div>
            <div class="row">
                <% for(let i = 0; i < products.length; i++){ %> 
                    <div class="subContProduct background card">
                        <img src="../img/avatars/<%= products[i].img %> " alt="" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= products[i].name %> </h5>
                            <p class="card-text"><%= products[i].description %> </p>
                            <p class="card-text">$<%= products[i].price %> </p>
                            <p class="card-text"><%= products[i].category %> </p>
                        </div>
                        <div class="card-body d-flex justify-content-between">
                            <a href="../../products/<%= products[i].id %>" class="btn btn-primary btnDetalleIndex">Detalle</a> 
                            <% if(user.permisos == '1'){ %>
                                <a href="products/update/<%= products[i].id %>" class=" btn btn-success btn-editProduct">Editar</a> 
                                <form action="/products/delete/<%= products[i].id %>" method="POST">
                                    <input type="submit" value="Borrar" class="btn btn-danger">
                                </form>
                            <% } else { %>
                                <a href="../../products/buy/<%= products[i].id %>" class="btn btn-success btnComprarIndex">Comprar</a> 
                            <% } %> 
                        </div>
                    </div>
                <% } %> 
            </div>
        </div>
    </div>

</body>

