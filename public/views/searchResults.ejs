<body>
    <div class="container">
        <div class="row background">
            <h3>Resultados de:</h3>
            <h5>"<%= wordSearched %> "</h5>
            <hr>
            <% for(let i = 0; i < results.length; i++){ %>
                <a href="/products/<%= results[i].id %> "><%= results[i].name %> </a>
            <% } %> 
            <% if(results.length === 0){ %>
                <p>No se encontraron resultados...</p>
                <a href="/">Volver al Inicio</a>
            <% } %> 
        </div>
    </div>
</body>

